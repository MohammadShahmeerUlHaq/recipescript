# Simple Pasta Recipe with Recipe Functions
# Scalable recipe for any number of people

recipe boil_water(temp stove_temp) {
    serve "Step 1: Boil water";
    heat stove to stove_temp;
    wait 5 minutes;
}

recipe cook_pasta(ingredient pasta, ingredient water, ingredient salt) returns ingredient {
    serve "Step 2: Add pasta to boiling water";
    mix pasta with water;
    add salt to pasta;
    serve "Cooking pasta...";
    wait 10 minutes;
    return pasta;
}

recipe add_sauce(ingredient pasta, ingredient sauce) {
    serve "Step 3: Add tomato sauce";
    add sauce to pasta;
    wait 2 minutes;
    serve "Pasta is ready to serve!";
}

# Get number of people to serve
input people;

# Calculate ingredients per person (100g pasta, 50ml sauce per person)
ingredient pasta = 100 * people grams;
ingredient water = 0.5 * people cups;
ingredient tomato_sauce = 50 * people ml;
ingredient salt = 0.25 * people tsp;

temp stove = 212 F;
time cook_time = 10 minutes;

# Display ingredient list
serve "=== Pasta Recipe ===";
serve "Ingredients needed:";
display pasta;
display water;
display tomato_sauce;
display salt;
serve "====================";

# Boil water using recipe function
boil_water(stove);

# Cook pasta using recipe function
ingredient cooked_pasta = cook_pasta(pasta, water, salt);

# Add sauce using recipe function
add_sauce(cooked_pasta, tomato_sauce);
