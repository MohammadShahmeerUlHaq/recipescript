# Chocolate Chip Cookies Recipe
# Scalable recipe with input parameters

# Get number of servings (1 serving = 6 cookies)
input servings;

# Calculate ingredients per serving
ingredient flour = 0.5 * servings cups;
ingredient sugar = 0.25 * servings cups;
ingredient butter = 0.125 * servings cups;
ingredient chocolate_chips = 0.25 * servings cups;
ingredient eggs = 0.5 * servings cups;

temp oven = 350 F;

# Display ingredients
serve "=== Chocolate Chip Cookies ===";
serve "Ingredients:";
display flour;
display sugar;
display butter;
display chocolate_chips;
display eggs;
serve "==============================";

# Preheat the oven
heat oven to 350 F;
serve "Preheating oven...";
wait 10 minutes;

# Mix dry ingredients
mix flour with sugar;
serve "Mixed dry ingredients";

# Add wet ingredients
mix flour with butter;
add eggs to flour;
serve "Added wet ingredients";

# Add chocolate chips
add chocolate_chips to flour;
serve "Added chocolate chips";

# Bake
serve "Baking cookies...";
wait 15 minutes;

serve "Chocolate chip cookies are ready! Enjoy!";
