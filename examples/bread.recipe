# Homemade Bread Recipe
# Scalable bread recipe with kneading

# Get number of loaves to make
input loaves;

# Calculate ingredients per loaf
ingredient flour = 3 * loaves cups;
ingredient water = 1 * loaves cups;
ingredient yeast = 2 * loaves tbsp;
ingredient salt = 1 * loaves tsp;

temp oven = 375 F;

# Display ingredients
serve "=== Homemade Bread ===";
serve "Ingredients:";
display flour;
display water;
display yeast;
display salt;
serve "======================";

# Mix ingredients
mix flour with water;
add yeast to flour;
add salt to flour;
serve "Mixed all ingredients";

# Knead the dough (more kneading for more loaves)
quantity knead_times = 3 + loaves;
repeat 5 times {
    mix flour;
    wait 2 minutes;
}
serve "Dough kneaded";

# Let it rise
serve "Letting dough rise...";
wait 60 minutes;

# Bake
heat oven to 375 F;
wait 10 minutes;
serve "Baking bread...";
wait 30 minutes;

serve "Fresh bread is ready!";
