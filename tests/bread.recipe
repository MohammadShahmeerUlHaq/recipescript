# Homemade Bread Recipe with Recipe Functions
# Scalable bread recipe with kneading

recipe mix_ingredients(ingredient flour, ingredient water, ingredient yeast, ingredient salt) returns ingredient {
    mix flour with water;
    add yeast to flour;
    add salt to flour;
    serve "Mixed all ingredients";
    return flour;
}

recipe knead_dough(ingredient dough) {
    repeat 5 times {
        mix dough;
        wait 2 minutes;
    }
    serve "Dough kneaded";
}

recipe bake_bread(ingredient dough, temp oven_temp) {
    wait 10 minutes;
    serve "Baking bread...";
    wait 30 minutes;
    serve "Fresh bread is ready!";
}

# Get number of loaves to make
input loaves;

# Calculate ingredients per loaf
ingredient flour = 3 * loaves cups;
ingredient water = 1 * loaves cups;
ingredient yeast = 2 * loaves tbsp;
ingredient salt = 1 * loaves tsp;

temp oven_temp = 375 F;

# Display ingredients
serve "=== Homemade Bread ===";
serve "Ingredients:";
display flour;
display water;
display yeast;
display salt;
serve "======================";

# Mix ingredients using recipe function
ingredient dough = mix_ingredients(flour, water, yeast, salt);

# Knead the dough
knead_dough(dough);

# Let it rise
serve "Letting dough rise...";
wait 60 minutes;

# Bake using recipe function
bake_bread(dough, oven_temp);
